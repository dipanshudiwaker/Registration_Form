<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REGISTRATION FORM FOR \n CSE STUDENTS"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:layout_margin="5dp"
            android:fontFamily="sans-serif-condensed"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/btnimage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/title"
            android:layout_marginStart="150dp"
            android:src="@drawable/uploade" />
        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Uploade the image"
            android:layout_below="@+id/btnimage"
            android:layout_marginStart="150dp"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/t1"
            android:layout_width="79dp"
            android:layout_height="39dp"
            android:layout_below="@+id/text"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:text="Name :"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/t2"
            android:layout_width="74dp"
            android:layout_height="43dp"
            android:layout_below="@+id/t1"
            android:layout_marginStart="50dp"
            android:layout_marginTop="9dp"
            android:text="Email :"
            android:textColor="@color/black"
            android:textSize="20sp" />



        <EditText
            android:id="@+id/e1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text"
            android:layout_alignLeft="@+id/t1"
            android:hint="name"
            android:layout_marginLeft="112dp"
            android:layout_marginTop="10dp"
            android:inputType="textPersonName"
            />

        <EditText
            android:id="@+id/e2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/e1"
            android:layout_alignLeft="@+id/t2"
            android:layout_marginLeft="103dp"
            android:layout_marginTop="3dp"
            android:hint="email"
            android:inputType="textEmailAddress" />

        <RadioGroup
            android:id="@+id/radiogroup1"
            android:layout_width="348dp"
            android:layout_height="218dp"
            android:layout_below="@+id/e2"
            android:layout_marginStart="50dp"
            android:layout_marginTop="5dp"
            android:padding="10dp">

            <TextView
                android:id="@+id/rt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Which Domain Did you Like"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/r1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/RadioB1" />

            <RadioButton
                android:id="@+id/r2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/RadioB2" />

            <RadioButton
                android:id="@+id/r3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/RadioB3" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/RadioB4" />
        </RadioGroup>
        <TextView
            android:id="@+id/t3"
            android:layout_below="@+id/radiogroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Which Programming Language Did you Like"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"/>

        <CheckBox
            android:id="@+id/c1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t3"
            android:layout_marginStart="50dp"
            android:text="Python" />
        <CheckBox
            android:id="@+id/c2"
            android:layout_below="@+id/c1"
            android:layout_marginStart="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Java"/>
        <CheckBox
            android:id="@+id/c3"
            android:layout_below="@+id/c2"
            android:layout_marginStart="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C++"/>

        <CheckBox
            android:id="@+id/c4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/c3"
            android:layout_marginStart="50dp"
            android:text="Java Script" />

        <Button
            android:id="@+id/btnsubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/c4"
            android:layout_marginTop="15dp"
            android:layout_alignParentBottom="true"
            android:text="Submit" />

    </RelativeLayout>

</ScrollView>